
<div class="container" style="padding-top: 7px">
  <ul id="show-tile">
    <li>
      <!-- pin img -->
      <% if(pin.escape("url") !== null && pin.escape("url") !== "") { %>
      <a href="<%= pin.escape("url") %>" onclick="window.open(this.href); return false;">
      <% } %>

        <img src="<%= pin.escape("img") %>" class="img-responsive">

      <% if(pin.escape("url") !== null && pin.escape("url") !== "") { %>
      </a>
      <% } %>


      <p><%= pin.escape("description") %></p>

      <!-- check for current_user -->
      <% if(pin.get("pinned")) { %>
        <!-- edit pin button -->
        <button type="button" class="btn btn-default" id="pin-edit-button" data-id="<%= pin.id %>">
          <span class="glyphicon glyphicon-pencil" id="edit-icon" data-id="<%= pin.id %>"></span>
        </button>
      <% } else { %>
        <!-- add pin button -->
        <button type="button" class="btn btn-default" id="pin-add-button" data-id="<%= pin.id %>" style="background: transparent; padding-top: 2px; padding-bottom: 2px; float: right">
          <span class="glyphicon glyphicon-pushpin" id="add-icon" data-id="<%= pin.id %>"></span>
        </button>
      <% } %>

    </li>
  </ul>
</div>


<script>
$(document).imagesLoaded(function() {
  // Call the layout function.
  $('#show-tile li').wookmark({
    align: "center",
    autoResize: true, // This will auto-update the layout when the browser window is resized.
    container: $('#show-tile'), // Optional, used for some extra CSS styling
  });
});
</script>
