<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 align="center"><%= pin.escape("description") %></h4>
</div>


<div class="modal-body">

  <a href='<%= pin.escape("url") %>' target="_blank"><img id="show-pin-img" src='<%= pin.escape("img") %>' class="img-responsive"></a>

</div>

<div class="modal-footer" style="text-align: center">

  <!-- check for current_user -->
  <% if(pin.get("pinned")) { %>
    <!-- edit pin button -->
    <button type="button" class="btn btn-default" id="pin-show-button" data-id="<%= pin.id %>">
      <span class="glyphicon glyphicon-pencil" id="edit-icon" data-id="<%= pin.id %>"></span>
    </button>
  <% } else { %>
    <!-- add pin button -->
    <button type="button" class="btn btn-default" id="pin-show-button" data-id="<%= pin.id %>">
      <span class="glyphicon glyphicon-pushpin" id="add-icon" data-id="<%= pin.id %>"></span>
    </button>
  <% } %>

  <!-- user info/link -->
  <a id="board" href="#">
    <div id="user-info">
      <b><%= pin.escape("user_fname") %> <%= pin.escape("user_lname") %></b><br>
      <%= pin.escape("board_name") %>
    </div>
  </a>
</div>