<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 align="center">Edit Pin</h4>
</div>


<div class="modal-body">
  <!-- render boards list / new boards template -->
  <div class="row" id="boards-list-wrapper"></div>

  <!-- description -->
  <div class="form-group">
    <div class="row">
      <div class="col-xs-1 col-xs-offset-1">
          <label for="pin_desc">Description</label>
      </div>

      <div class="col-xs-7 col-xs-offset-1">
          <textarea class="form-control" id="pin_desc" name="pin[description]" placeholder="What's this Pin all about?"></textarea>
      </div>
    </div>
  </div>
</div>


<div class="modal-footer">
  <div class="row">
    <div class= "col-xs-1 col-xs-offset-1">
        <input type="submit" class="hidden">
        
        <button 
            type="button" 
            class="btn btn-default" 
            id="delete-pin">
          Delete Pin
        </button>
    </div>
          
    <div class= "col-xs-5 col-xs-offset-4">      
      <button type="button" class="btn btn-default" id="cancel">Cancel</button>
      <button type="submit" class="btn btn-danger" id="submit-pin-button">
        Save Changes
      </button>
    </div>
  </div>
</div>