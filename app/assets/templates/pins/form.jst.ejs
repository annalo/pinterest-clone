<h3 align="center">Pick a board</h3>
<form id="pin_form_details">
  <div class="form-group">
    <div class="row">
      <div class="col-xs-1 col-xs-offset-2">
        <label for="pin_name">Board</label>
      </div>
    
      <div class="col-xs-6 col-xs-offset-1">
        <select name="pin[board_id]" class="form-control" id="board-pin">
          <% boards.each(function(board) { %>
            <option value="<%= board.id %>"><%= board.escape("name") %></option>
          <% }); %>
        </select>
      </div>
    </div>
  
    <p />
    
    <div class="row">
      <div class="col-xs-1 col-xs-offset-2">
          <label for="pin_desc">Description</label>
      </div>

      <div class="col-xs-6 col-xs-offset-1">
          <textarea class="form-control" id="pin_desc" name="pin[description]" placeholder="What's this Pin all about?"></textarea>
      </div>
    </div>

    <p />
    
    <div class="row">
      <div class= "col-xs-5 col-xs-offset-7">      
        <input type="submit" class="hidden">
      
        <button type="button" class="btn btn-default" id="close">Close</button>
        <button type="submit" class="btn btn-primary" id="submit-pin">Pin it</button>
      </div>
    </div>
  </div>
</form>