<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 align="center">Add a pin from a website</h4>
</div>


<div class="modal-body">
  <!-- url text field -->
    <form id="web-pin-form">
      <div class="row">
        <div class="form-group">

          <div class="col-xs-8 col-xs-offset-1">
            <input class="form-control" type="text" name="url" id="pins-url" placeholder="http://...">
          </div>

          <div class="col-xs-2">
            <button type="submit" id="next" class="btn btn-danger">Next</button>
          </div>

        </div>
      </div>
    </form>
  </p>
</div>

<script>
  $(document).ready(function () {
    $("#web-pin-form").validate({
      debug: true,

      rules: {
        "pins[url]": {
          required: true,
          url: true
        }
      },

      highlight: function(element, errorClass, validClass) {
        $(".form-group").addClass("has-error");
      },
      unhighlight: function(element, errorClass, validClass) {
        $(".form-group").removeClass("has-error");
      }
    });
  });
</script>