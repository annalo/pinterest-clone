<!DOCTYPE html>
<html>
<head>
  <title>PinterestClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
  
<% if !current_user.nil? %>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">   
    <ul class="nav navbar-nav">        
      <li><div class="btn-group">
        <button 
            type="button" 
            class="btn btn-default navbar-btn dropdown-toggle" 
            data-toggle="dropdown">
          <span class="glyphicon glyphicon-align-justify"></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <a href="#"><i class="icon-pencil"></i> categories??</a>
          </li>
          <li>
            <a href="#"><i class="icon-trash"></i> sdf</a>
          </li>
          <li>
            <a href="#"><i class="icon-ban-circle"></i> sdf</a>
          </li>
          <li class="divider"></li>
          <li>
            <a href="#"><i class="i"></i> asdf</a>
          </li>
        </ul>
      </div></li>
    </ul>
    
    <form 
      class="navbar-form navbar-left" 
      role="search" 
      style="padding: 0 4px 0 4px">
      <div class="form-group">
        <input 
            type="text" 
            class="form-control" 
            placeholder="What are you into?">
      </div>
      <button 
          type="submit" 
          class="btn btn-default">
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </form>
    
    <div id="navbar-brand-center">
      <a class="navbar-brand" href="/">PinterestClone</a>
    </div>
    
    <ul class="nav navbar-nav navbar-right">      
      <li><div class="btn-group">
        <button 
            type="button" 
            class="btn btn-default navbar-btn dropdown-toggle" 
            data-toggle="dropdown">
          <span class="glyphicon glyphicon-plus"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a href="#" class="new-pin">
              <span class="glyphicon glyphicon-arrow-up"></span> Upload a Pin
            </a></li>
          <li><a href="#">
              <span class="glyphicon glyphicon-globe"></span> Add from a Website
            </a></li>
          <li><a href="#/boards/new">
              <span class="glyphicon glyphicon-th-large"></span> Create a Board
            </a></li>
          <li class="divider"></li>
          <li>
            <a href="#"><i class="i"></i> message??</a>
          </li>
        </ul>
      </div></li>
      <li></li>
      <li><div class="btn-group">
        <button 
            type="button" 
            class="btn btn-default navbar-btn dropdown-toggle user-button" 
            data-toggle="dropdown">
          <span class=""></span> <%= current_user.fname %>
        </button>
        <ul class="dropdown-menu">
          <li><a href="#/users/<%= current_user.id %>">
            Your Profile & Pins
          </a></li>
          <li><a href="#">Settings</a></li>
          <li class="divider"></li>
          <li><a href="#">Find Friends</a></li>
          <li><a href="#">Follow Boards</a></li>
          <li class="divider"></li>
          <li><a href="#">Visit Help Center</a></li>
          <li class="divider"></li>
          <li><%= link_to "Log Out", session_url, :method => :delete %></li>
        </ul>
      </div></li>
    </ul>
  </nav>
<% end %>

<div class="container">
  <%= yield %>
</div>


<!-- modal -->

<%= render "/layouts/modal" %>

</body>
</html>