<!DOCTYPE html>
<html>
<head>
  <title>PinterestClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- pass in current user to client side -->
  <script type="application/json" id="bootstrapped_current_user">
    <%= current_user.to_json.html_safe %>
  </script>
  
</head>

<body>

<div class="container">
  <%= yield %>
</div>


<!-- modal -->

<%= render "/layouts/modal" %>

</body>
</html>