<!-- example account login -->
<form id="sign-in-form" action="<%= session_url %>" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

    <input
      class="form-control"
      type="hidden"
      id="email"
      name="user[email]"
      value="amanda@email.com">

    <input
      class="form-control"
      type="hidden"
      id="password"
      name="user[password]"
      value="password">
</form>

<div class="bottom-section"></div>

<script>
  $("#example-sign-in").click(function(event) {
    debugger;
    event.preventDefault();
    $("#sign-in-form").trigger("submit");
  })
</script>